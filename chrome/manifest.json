{
  "manifest_version": 3,
  "name": "CodePilot",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
     "matches": ["*://poe.com/*", "*://copilot.microsoft.com/*"],
      "js": ["Util.js","content.js"]
    }
  ]
}